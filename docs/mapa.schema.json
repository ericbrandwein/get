{
    "$schema": "http://json-schema.org/schema#" ,
    "title": "planisphere",
    "description": "A world's (or region's) flat representation",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the map"
        },
        "continents": {
            "type": "array",
            "items":{
                "type": "object",
                "properties": {
                    "name": {"type": "string" },
                    "description": "A continent",
                    "countries": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "countries":{ 
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "description": "country",
                                        "properties": {
                                            "name": { "type" : "string" },
                                            "color": { "type": "integer"}
                                        }
                                    }
                                }
                                
                            }
                        }
                    }
                }
            }
        },
        "borders": {
            "type": "array",
            "items": {
                "type": "object",
                "description": "A pair of bordering countries",
                "properties": {
                    "first": {
                        "type":"integer",
                        "description": "the color of the country"
                    },
                    "second": {
                        "type":"integer",
                        "description": "the color of the country"
                    }

                }
            }
        }
    }
}


